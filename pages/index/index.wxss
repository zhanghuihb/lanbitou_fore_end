.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2.5rem;
  align-items: center;
}
.td {
    justify-content: center;
    text-align: center;
    font-size: 14px;
}
.th {
  justify-content: center;
  background: #FFD700;
  color: #000000;
  display: flex;
  height: 2.5rem;
  align-items: center;
  font-size: 16px;
}
.line {
  width: 100%;
  height: 1px;
  background: #D3D3D3;
}

.vertical-line {
  float: left;
  width: 1px;
  height: 60%;
  background: #888888;
  margin-top: 10px;
}

.hide {
  display: none;
}
.statics {
  width: 100%;
  height:3rem;
  background: #FFD700;
}
.header {
  width: 33%;
  float: left;
  margin-top: 7px;
}
.top {
  width: 100%;
  font-size: 14px;
