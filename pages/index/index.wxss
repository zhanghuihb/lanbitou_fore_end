.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2.5rem;
  align-items: center;
}
.td {
    justify-content: center;
    text-align: center;
    font-size: 14px;
}
.th {
  justify-content: center;
  background: #FFD700;
  color: #000000;
  display: flex;
  height: 2.5rem;
  align-items: center;
}
.line {
  width: 100%;
  height: 1px;
  background: #D3D3D3;
  margin: 0 20rpx;
}
.hide {
  display: none;
}