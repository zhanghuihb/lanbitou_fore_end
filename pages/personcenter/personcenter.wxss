/* pages/personcenter/personcenter.wxss */
.accountinfo {
  height: 90px;
  background: #FF8C00;
}
.position{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
}

.personcenter{
  display: flex;
  height: 100rpx;
  align-items: center;
  position: relative;
  background-color: white;
  border-bottom:solid 1rpx rgba(214, 214, 214, 0.4);
}

.personcenter text{
  font-size: 32rpx;
	color: #333839;
  margin-left: 17rpx;
}

.setting-view {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}
.icon-image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 33rpx;
}
.right-image{
  position: absolute;
  right: 30rpx;
  top: 40rpx;
  width: 12rpx;
  height: 21rpx;
}

.statics {
  width: 100%;
  height:3rem;
  background: #FF8C00;
}
.header {
  width: 33%;
  float: left;
}
.top {
  width: 100%;
  font-size: 14px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.vertical-line {
  float: left;
  width: 1px;
  height: 60%;
  background: #888888;
  margin-top: 10px;
}